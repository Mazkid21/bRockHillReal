<head>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/css/hover.css">
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,800,300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="css/card.css">
    <script src="js/card.js"></script>
</head>

<section id='works' class="s-works">

    <div class="intro-wrap" style="padding: 15rem 0 10rem;">

        <div class="row section-header has-bottom-sep light-sep" data-aos="fade-up">
            <div class="col-full">
                <h3 class="subhead">Recent Lisitings</h3>
                <h1 class="display-2 display-2--light">We love what we do, check out some of our latest listings</h1>
                <a href="/rentals" class="listingOption btn btn--stroke">
                    CHECK OUT RENTALS
                </a>
            </div>
        </div> <!-- end section-header -->

    </div> <!-- end intro-wrap -->
    <div class="row section-header has-bottom-sep light-sep" data-aos="fade-up">
        <form action="/search" method="post">
            <div class="col-sm-12">
                <label> Price: </label>
                <input id="minPrice" type="number" class="col-sm-2" name="minPrice" placeholder="MIN PRICE"></input>
                <input id="maxPrice" type="number" class="col-sm-2" name="maxPrice" placeholder="Max PRICE"></input>
            </div>
            <div class="col-sm-3">
                <label>Bedrooms:</label>
                <div class="input-number">
                    <input id="numBed" type="number" name="numBed" placeholder="quantity" value="{{numBed}}" min="1"
                        max="10" />
                    <div class="input-number__controls">
                        <span class="input-number__increase"><i class="stack-up-open"></i></span>
                        <span class="input-number__decrease"><i class="stack-down-open"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <label>Bathrooms:</label>
                <div class="input-number">
                    <input id="numBath" type="number" name="numBath" placeholder="quantity" value="{{numBath}}" min="1"
                        max="5" />
                    <div class="input-number__controls">
                        <span class="input-number__increase"><i class="stack-up-open"></i></span>
                        <span class="input-number__decrease"><i class="stack-down-open"></i></span>
                    </div>
                </div>
            </div>
            <input type="submit" value="Send message" />

        </form>
    </div>
    <div class="row works-content">
        <div class="col-full masonry-wrap">
            <div class="masonry">
                {{#if error}}
                <h1>ERRRORRR</h1>
                {{else}}


                {{#each property}}
                <div class="masonry__brick" data-aos="fade-up">
                    <div class="item-folio__thumb">
                        {{!-- hover card --}}
                        <div class="content">
                            <div class="grid">
                                <figure class="effect-zoe">
                                    <a href="/search/{{this.ListingKey}}">
                                        <img src="{{this.Media.0.MediaURL}}" alt="img25" />
                                    </a>
                                    <figcaption>
                                        <div class="small-container">
                                            <h2 style="flex: 2 0 0; font-size:2vw;">{{this.StreetNumber}},
                                                {{this.StreetName}}
                                                {{this.StreetSuffix}}</h2>
                                            <p class="icon-links" style="flex: 1 0 0; font-size:2vw;">
                                                &#36;{{this.ListPrice}}
                                            </p>
                                            <hr>
                                            <p style="font-size:.9vw;">{{this.PublicRemarks}}</p>
                                        </div>
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    </div>
                </div> <!-- end masonry__brick -->
                {{/each}}
                {{/if}}
            </div> <!-- end masonry -->
        </div> <!-- end col-full -->
    </div> <!-- end works-content -->

</section> <!-- end s-works -->






<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<script src="/js/listing.js"></script>